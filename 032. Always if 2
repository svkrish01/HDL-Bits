//032. Always if 2

module top_module 
    (
        input cpu_overheated,
        input arrived, gas_tank_empty,
        output reg shut_off_computer,
        output reg keep_driving  
    ); 

    always @(*) begin
        if (cpu_overheated) begin
            shut_off_computer = 1'b1;
    	end
        
        else begin
            shut_off_computer = 1'b0;
        end
    end

    always @(*) begin
        if (arrived | gas_tank_empty) begin
           keep_driving = 1'b0;
        end
        
        else begin
            keep_driving = 1'b1;
        end
    end

endmodule
