//071. 100-Bit Binary Adder

module top_module
    ( 
        input [99:0] a, b,
        input cin,
        output cout,
        output [99:0] sum 
    );
    
    wire [0:100] carry;
    
    assign carry[0] = cin;
    
    genvar i;
    
    generate
        for(i = 0; i < 100; i = i + 1) begin : adder_100
            assign carry[i+1] = (a[i] & b[i]) | ((a[i] | b[i]) & carry[i]);
            assign sum[i] = (a[i] ^ b[i] ^ carry[i]);
        end
    endgenerate
    
    assign cout = carry[100];            

endmodule
