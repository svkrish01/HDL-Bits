//072. 4-Digit BCD Adder

module top_module 
    ( 
        input [15:0] a, b,
        input cin,
        output cout,
        output [15:0] sum 
    );
    
    wire [4:0] carry;
    
    assign carry[0] = cin;
    
    genvar i;
    
    generate
        for(i = 0; i < 4; i = i + 1) begin : bcd_adder
            bcd_fadd instance_i (.a(a[(4*i)+3:(4*i)]), .b(b[(4*i)+3:(4*i)]), .cin(carry[i]), .cout(carry[i+1]), .sum(sum[(4*i)+3:(4*i)]));
        end
    endgenerate
    
    assign cout = carry[4];            

endmodule
